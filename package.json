{
    "name": "knuckle",
    "version": "0.1.0",
    "description": "Front end script",
    "license": "MIT",
    "author": "",
    "homepage": "https://github.com/GuillaumeAmat/knuckle#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GuillaumeAmat/knuckle.git"
    },
    "bugs": {
        "url": "https://github.com/GuillaumeAmat/knuckle/issues"
    },
    "keywords": [
        "script",
        "lint",
        "format",
        "test"
    ],
    "engines": {
        "node": ">=8.9.1"
    },
    "main": "dist/index.js",
    "bin": {
        "knuckle": "dist/bin/index.js"
    },
    "scripts": {
        "format": "prettier --write 'src/**/*.{js,json}'",
        "format:test": "prettier 'src/**/*.{js,json}'",
        "format:staged": "prettier --write",
        "lint": "eslint src --fix",
        "lint:staged": "eslint --fix --max-warnings=0",
        "lint:test": "eslint src",
        "precommit": "lint-staged",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "test": "echo todo",
        "build": "babel src -d dist",
        "postinstall": "npm run build",
        "deploy": "npm publish",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate"
    },
    "devDependencies": {
        "@commitlint/cli": "^6.1.3",
        "@commitlint/config-conventional": "^6.1.3",
        "all-contributors-cli": "^4.11.1",
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.2.2",
        "babel-plugin-transform-es2015-destructuring": "6.19.0",
        "babel-plugin-transform-object-rest-spread": "6.20.2",
        "babel-preset-env": "^1.6.1",
        "babel-preset-latest": "^6.24.1",
        "cross-spawn": "^6.0.5",
        "eslint": "^4.18.2",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.0.1",
        "husky": "^0.14.3",
        "lint-staged": "^4.2.2"
    },
    "dependencies": {
        "commander": "^2.15.0",
        "prettier": "^1.7.0"
    },
    "lint-staged": {
        "src/**/*.json": [
            "format:staged",
            "git add"
        ],
        "src/**/*.js": [
            "format:staged",
            "lint:staged",
            "git add"
        ]
    }
}
