{
  "name": "knuckle",
  "version": "0.11.0",
  "description": "Project configuration handler, without efforts",
  "license": "MIT",
  "author": "Guillaume AMAT <guillaume@amat.io>",
  "homepage": "https://github.com/GuillaumeAmat/knuckle#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GuillaumeAmat/knuckle.git"
  },
  "bugs": {
    "url": "https://github.com/GuillaumeAmat/knuckle/issues"
  },
  "keywords": [
    "script",
    "lint",
    "format",
    "test"
  ],
  "engines": {
    "node": ">=12.10.0"
  },
  "files": [
    "config",
    "dist"
  ],
  "main": "dist/bin/index.js",
  "bin": {
    "knuckle": "dist/bin/index.js"
  },
  "scripts": {
    "knuckle": "babel-node src/bin/index.js",
    "format": "npm run knuckle -- prettier --write 'src/**/*.{js,json}'",
    "format:test": "npm run knuckle -- prettier --list-different 'src/**/*.{js,json}'",
    "lint-js": "npm run knuckle -- eslint src",
    "test": "nyc --cwd=$(pwd) yarn jest --watch",
    "test-ci": "nyc --cwd=$(pwd) yarn jest --ci",
    "open-coverage-file": "opener coverage/lcov-report/index.html",
    "build": "rimraf dist && babel src -d dist",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "preversion": "npm test && npm run build",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "all-contributors-cli": "^5.4.1",
    "babel-eslint": "^10.0.1",
    "concat-stream": "^2.0.0",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.1",
    "jest": "^24.9.0",
    "lint-staged": "^8.1.0",
    "nyc": "^14.1.1",
    "opener": "^1.5.1",
    "prettier": "^1.15.3",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "commander": "^3.0.1",
    "cosmiconfig": "^5.0.7",
    "cross-spawn": "^7.0.0",
    "inquirer": "^7.0.0",
    "lodash": "^4.17.11",
    "read-pkg-up": "^6.0.0"
  }
}
