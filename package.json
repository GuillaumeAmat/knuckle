{
  "name": "knuckle",
  "version": "0.6.2",
  "description": "Front end script",
  "license": "MIT",
  "author": "",
  "homepage": "https://github.com/GuillaumeAmat/knuckle#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GuillaumeAmat/knuckle.git"
  },
  "bugs": {
    "url": "https://github.com/GuillaumeAmat/knuckle/issues"
  },
  "keywords": [
    "script",
    "lint",
    "format",
    "test"
  ],
  "engines": {
    "node": ">=8.9.1"
  },
  "main": "dist/bin/index.js",
  "files": [
    "config",
    "dist"
  ],
  "bin": {
    "knuckle": "dist/bin/index.js"
  },
  "scripts": {
    "knuckle": "babel-node src/bin/index.js",
    "format": "npm run knuckle -- prettier --write 'src/**/*.{js,json}'",
    "format:test": "npm run knuckle -- prettier --list-different 'src/**/*.{js,json}'",
    "lint-js": "npm run knuckle -- eslint src",
    "test": "echo TODO",
    "build": "rimraf dist && babel src -d dist",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "preversion": "npm test && npm run build",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "all-contributors-cli": "^5.4.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "commander": "^2.19.0",
    "cosmiconfig": "^5.0.6",
    "cross-spawn": "^6.0.5",
    "lodash": "^4.17.11",
    "read-pkg-up": "^4.0.0"
  }
}
